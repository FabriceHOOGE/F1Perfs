<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.ldnr.f1perfs.SearchActivity">


    <AutoCompleteTextView
        android:id="@+id/search_search_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_search_event" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_search_timeM"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/search_search_timeM" />

        <EditText
            android:id="@+id/search_search_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/search_search_minute" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_search_timeS"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/search_search_timeS" />

        <EditText
            android:id="@+id/search_search_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/search_search_seconds" />

    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/search_searchpilot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_searchpilot" />

    <AutoCompleteTextView
        android:id="@+id/search_searchtrack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_searchtrack" />

    <Button
        android:id="@+id/search_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_search" />


</LinearLayout>